// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User/Wallet
model User {
  id        String   @id @default(cuid())
  address   String   @unique // Wallet address (lowercase)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  captures TokenCapture[]

  @@index([address])
}

// Token metadata
model Token {
  id        String   @id @default(cuid())
  address   String   @unique // Token contract address (lowercase)
  symbol    String
  name      String
  decimals  Int
  chainId   Int
  createdAt DateTime @default(now())

  captures TokenCapture[]
  prices   TokenPrice[]

  @@index([address])
  @@index([chainId])
}

// Token captures by users (verified on-chain)
model TokenCapture {
  id              String   @id @default(cuid())
  userId          String
  tokenId         String
  txHash          String   @unique // Transaction hash for verification
  purchasePrice   String   // Price in USD at time of capture (stored as string to avoid precision issues)
  amountCaptured  String   // Amount of token captured (in wei/smallest unit)
  usdcSpent       String   // Amount of USDC spent (in smallest unit, 6 decimals)
  capturedAt      DateTime @default(now())
  verified        Boolean  @default(false) // Set to true after on-chain verification
  verifiedAt      DateTime?

  user  User  @relation(fields: [userId], references: [id])
  token Token @relation(fields: [tokenId], references: [id])

  @@index([userId])
  @@index([tokenId])
  @@index([txHash])
  @@index([capturedAt])
}

// Token price history (updated by cron job)
model TokenPrice {
  id        String   @id @default(cuid())
  tokenId   String
  price     String   // Price in USD (stored as string to avoid precision issues)
  source    String   // Source of price (e.g., "trading-api", "coingecko")
  timestamp DateTime @default(now())

  token Token @relation(fields: [tokenId], references: [id])

  @@index([tokenId])
  @@index([timestamp])
  @@index([tokenId, timestamp]) // Composite index for efficient queries
}
